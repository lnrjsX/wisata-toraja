<div class="card mb-4 mt-2">
   <div class="card-body">
      <div class="table-responsive">
         <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
               <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Location</th>
                  <th>Action</th>
               </tr>
            </thead>
            <tbody>
               <% items.forEach((item, i)=> { %>
                  <tr>
                     <td>
                        <%= ++i %>
                     </td>
                     <td>
                        <%= item.name %>
                     </td>
                     <td>
                        <%= item.location %>
                     </td>
                     <td>
                        <form method="POST" action="/admin/home/?_method=DELETE" class="d-flex flex-column">
                           <a href="/admin/items/<%= item._id %>"
                              class="btn btn-outline-success btn-md badge btn-edit mb-1"> <i
                                 class="fa fa-info btn-child-edit"></i> Detail</a>
                           <a class="btn btn-outline-warning btn-md badge btn-edit mb-1"> <i
                                 class="fa fa-edit btn-child-edit"></i> Edit</a>
                           <button type="submit" class="btn btn-outline-danger btn-md badge d-block"> <i
                                 class="fa fa-trash"></i> Delete</button>
                        </form>
                     </td>
                  </tr>
                  <% }) %>
            </tbody>
         </table>
      </div>
   </div>
</div>